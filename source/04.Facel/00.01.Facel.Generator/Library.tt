<#+
bool IsID(EntityType entity)
{
	bool isid = false;
	foreach (EdmProperty edmProperty in entity.Properties.Where(p => p.TypeUsage.EdmType is PrimitiveType && p.DeclaringType == entity && p.Name.ToUpper() == "ID"))
	{
		isid = true;
	}
	return isid;
}
