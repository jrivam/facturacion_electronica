<#+
string GetPlural(string paramName)
{
        if (paramName.EndsWith("s"))
            return paramName;
        if (!(paramName.EndsWith("a") || paramName.EndsWith("e") || paramName.EndsWith("i") || paramName.EndsWith("o") || paramName.EndsWith("u")))
            paramName += "e";
        return paramName += "s";
}
